# The command that runs the program. If the interpreter field above is set to "alwaysUseInterpreter", this will run the command through the interpreter. In that case, make sure to include the interpreter's name at the start of the command.
run = "npm run dev"

# The primary language of the repl. There can be others, though!
language = "nodejs"

# Enable the ability to query the compiler/interpreter for installed packages
enablePackageQuery = true

# A list of globs that specify which files and directories should
# be hidden in the workspace.
hidden = [".config", "node_modules", "dist", ".git"]

# Specifies which nix channel to use when building the environment.
[nix]
channel = "stable-22_11"

# Specifies the interpreter to be used.
[interpreter]
command = ["node"]
args = ["--experimental-wasm-modules"]

[languages]

[languages.javascript]
pattern = "**/*.{js,jsx,ts,tsx}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[deploy]
run = ["sh", "-c", "npm run build && npx serve dist -p $PORT"]

